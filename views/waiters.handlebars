
    <title>Waiter App</title>
    <link rel="shortcut icon" href="/images/food.jpg">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<style>
    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {
        height: 550px
    }
    /* Set gray background color and 100% height */
    .sidenav {
        background-color: #18505f;
        height: 100%;
    }
    /* On small screens, set height to 'auto' for the grid */
    @media screen and (max-width: 767px) {
        .row.content {
            height: auto;
        }
    }
</style>

<!-- <body style="color:black"> -->
    <body style="font-family; color:white">

    <nav class="navbar navbar-inverse visible-xs">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">{{msg}}</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Dashboard</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-3 sidenav hidden-xs">
                <h2>{{msg}}</h2>
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="#">Waiter Dashboard</a></li>
                    <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul><br>
            </div>
            <br>

            <div class="col-sm-9">
                <div class="">
                    <h3 style="color:white">Please select days you can work on.</h3>
                </div>
                <div class="jumbotron">
                    <!-- <h4 style="color:white">{{msg}}</h4> -->
                    <form action="" method="post">
                        <table class="table table-striped table-hover ">
                            <thead>
                                <tr class="">
                                    <th>Select</th>
                                    <th>Days of the week</th>
                                    <th>Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="">
                                    <td class="">
                                        <input type="checkbox" name="days" value="sunday" {{#if myDays.sunday}} checked {{/if}} {{sun}}>
                                    </td>
                                    <td>Sunday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{sunBar}}%">{{sunAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="monday" {{#if myDays.monday}} checked {{/if}} {{mon}}>
                                    </td>
                                    <td>Monday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{monBar}}%">{{monAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="tuesday" {{#if myDays.tuesday}} checked {{/if}} {{tue}}>
                                    </td>
                                    <td>Tuesday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{tueBar}}%">{{tueAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="wednesday" {{#if myDays.wednesday}} checked {{/if}} {{wed}}>
                                    </td>
                                    <td>Wednesday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{wedBar}}%">{{wedAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="thursday" {{#if myDays.thursday}} checked {{/if}} {{thur}}>
                                    </td>
                                    <td>Thursday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{thurBar}}%">{{thurAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="friday" {{#if myDays.friday}} checked {{/if}} {{fri}}>
                                    </td>
                                    <td>Friday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{friBar}}%">{{friAvil}} booked.</div>
                                    </td>
                                </tr>
                                <tr class="">
                                    <td>
                                        <input type="checkbox" name="days" value="saturday" {{#if myDays.saturday}} checked {{/if}} {{sat}}>
                                    </td>
                                    <td>Saturday</td>
                                    <td class="progress">
                                        <div class="progress-bar progress-bar-danger" style="width: {{satBar}}%">{{satAvil}} booked.</div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>
