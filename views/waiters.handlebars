<title>{{user.firstName}} {{user.lastName}}</title>
</head>

<body>
    <hr>
    <div class="ui container">
        <div class="ui icon menu">
            <div class="item">
                <i class="home icon"></i>
            </div>
            <div class="item">
                <i class="info icon"></i>
                <a href="#"></a>
            </div>
            <div class="item">
                <a href="/settings/{{user._id}}">
                    <i class="user circle icon"></i>
                </a>
            </div>

            <div class="right item">
                <a href="/logout">
                    <i class="sign out icon"></i>
                </a>
            </div>
            <div class="ui compact menu">
                <a class="item">
                    <i class="icon mail"></i> 
                    {{!-- Messages --}}
                    <div class="floating ui red label">{{messageCount}} 2</div>
                </a>
                <a class="item" href="/friends">
                    <i class="icon users"></i> 
                    {{!-- Friends --}}
                    <div class="floating ui teal label">1</div>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="ui container">
        <div class="ui message">
            <div class="header">
                Hello <a href="">{{user.firstName}}</a>, welcome to waiter's web app.
            </div>
            <ul class="list">
                <li>You can now manage your shift here</li>
                {{#if messages.error}}
                <li>
                    <em class="error" >{{messages.error}}</em>
                </li>
                {{else}}
                <li>Select three prefered working days, and press
                    <em>
                        <b style="color: blue">save</b>
                    </em> button to submit</li>
                {{/if}}
            </ul>
        </div>
        <hr>
    </div>
    <div class="ui container">
        <h4 class="ui horizontal divider blue header">
            <i class="bar chart teal icon"></i>
            Shift
        </h4>
        <form action="" method="POST">
            <table class="ui selectable celled table">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Status</th>
                    <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <td>
                        <input type="checkbox" value="monday" name="shift">
                    </td>
                    <td>No Action</td>
                    <td>None</td>
                    </tr>
                    <tr>
                    <td>
                        <input type="checkbox" value="tuesday" name="shift">
                    </td>
                    <td>Approved</td>
                    <td>Requires call</td>
                    </tr>
                    <tr>
                    <td><input type="checkbox" value="wednesday" name="shift"></td>
                    <td>Denied</td>
                    <td>None</td>
                    </tr>
                </tbody>
                </table>
            <button class="ui primary button" id="btncheck">
                Save
            </button>
        </form>
    </div>
</body>