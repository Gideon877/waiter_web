                : verify email
         --}}

        <div class="jumbotron">
            <h4 class="display-4">Registration</h4>
            <p class="lead">Create new, free account.</p>
            <hr class="my-4">
            <p>You have account? Please login.</p>
            <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
        </div>

        <form action="/signUp" method="POST">
            <div class="form-group row">
                <label for="firstName" class="col-sm-2 col-form-label">Firstname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="firstName" value="{{userData.firstName}}" id="firstName" placeholder="Firstname" {{state.status}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="lastName" class="col-sm-2 col-form-label">Lastname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="lastName" value="{{userData.lastName}}" id="lastName" placeholder="Lastname" {{state.status}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="username" value="{{userData.username}}" id="username" placeholder="Username" {{state.status}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" value="{{userData.email}}" id="email" placeholder="Email" {{state.status}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="password" value="{{userData.password}}" id="password" placeholder="Password" {{state.status}}>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                    <a href="/" type="submit" class="btn btn-warning">Cancel</a>
                </div>
            </div>
            {{#if error}} 
            <div class="alert alert-danger" role="alert">
                {{error.message}}
            </div>
            {{/if}}
            {{#if success}} 
            <div class="alert alert-success" role="alert">
                {{success.message}}
            </div>
            {{/if}}
        </form>
    </div>
</div>