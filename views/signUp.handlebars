<div class="container">
    <div class="row">
        {{!-- <h2>signup</h2> --}}
        {{!-- 
            todo: add input required
                : verify email
         --}}

        <div class="jumbotron">
            <h4 class="display-4">Registration</h4>
            <p class="lead">Create new, free account.</p>
            <hr class="my-4">
            <p>You have account? Please login.</p>
            <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
        </div>

        {{#if state}}
            <div class="form-group row">
                <label for="firstName" class="col-sm-2 col-form-label">Firstname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="firstName" id="firstName" {{state.status}}>
                </div>
            </div>
            {{else}}
            <div class="form-group row">
                <label for="firstName" class="col-sm-2 col-form-label">Firstname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="firstName" id="firstName" value="admin" placeholder="Firstname">
                </div>
            </div>
        {{/if}}

        <form action="/signUp" method="POST">
            <div class="form-group row">
                <label for="firstName" class="col-sm-2 col-form-label">Firstname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="firstName" id="firstName" value="admin" placeholder="Firstname">
                </div>
            </div>
            <div class="form-group row">
                <label for="lastName" class="col-sm-2 col-form-label">Lastname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="lastName" id="lastName" value="admin" placeholder="Lastname">
                </div>
            </div>
            <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="username" id="username" value="admin" placeholder="Username">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" id="email" value="admin@admin.co" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="password" id="password" value="admin" placeholder="Password">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                    <a href="/cancel" type="submit" class="btn btn-warning">Cancel</a>
                </div>
            </div>
            {{#if error}} 
            <div class="alert alert-danger" role="alert">
                {{error.message}}
            </div>
            {{/if}}
            {{#if success}} 
            <div class="alert alert-success" role="alert">
                {{success.message}}
            </div>
            {{/if}}
        </form>
    </div>
</div>