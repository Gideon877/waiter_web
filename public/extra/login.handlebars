
    <title>Waiter App</title>
    <link rel="shortcut icon" href="/images/login.jpg">
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">

                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li class="active"><a href="https://twitter.com/Gideon877">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-sm-8 text-left">
                <h5><b>Enter login creditials</b></h5>

                <p>The form below contains two input elements; one of type text and one of type password:</p>

                {{#if messages.error}}
                    <div class="error" style="color:red">
                        {{messages.error}}
                        <br>
                        <br>
                    </div>

                {{/if}}

                {{#if messages.success}}
                    <div class="success">
                        {{messages.success}}
                        <br>
                        <br>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>

    <form action="" method="post" id="signin" class="navbar-form" role="form">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" class="form-control" id="username" name="username" value="" placeholder="Username" required>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="password" type="password" class="form-control" name="password" value="" placeholder="Password" required>
                    </div>

                </div>
            </div>
            <br>

            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</body>
